{
  "manifest_version": 3,
  "name": "Comment Reader for Twitch (powered by Voicevox)",
  "version": "1.0.6",
  "description": "TwitchのコメントをVOICEVOXで読み上げる拡張機能です。",
  "permissions": [
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "http://127.0.0.1:50021/*",
    "http://localhost:50021/*",
    "*://dashboard.twitch.tv/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://dashboard.twitch.tv/*"
      ],
      "js": [
        "src/content/loader.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/*.js",
        "src/lib/*.js"
      ],
      "matches": [
        "*://dashboard.twitch.tv/*"
      ]
    }
  ]
}
