{
  "manifest_version": 3,
  "name": "Comment Reader for Twitch (powered by Voicevox)",
  "version": "1.0.3",
  "description": "TwitchのコメントをVOICEVOXで読み上げる拡張機能です。",
  "permissions": [
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "http://127.0.0.1:50021/*",
    "*://dashboard.twitch.tv/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://dashboard.twitch.tv/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ]
}